@model IEnumerable<Agri_Energy_Connect.Models.Product>
@{
    ViewData["Title"] = "Your Products";
}

<h2>My Products</h2>

<a href="/Farmer/AddProduct" class="btn btn-primary mb-3">Add New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Production Date</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="2">No products found.</td></tr>
        }
        else
        {
            foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Description</td>
                    <td>@product.ProductionDate.ToLongDateString()</td>
                    <td>R @product.Price</td>
                    <td>
                        <a class="btn btn-primary mb-3" href="/Farmer/EditProduct/@product.ProductId">Edit Product</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
