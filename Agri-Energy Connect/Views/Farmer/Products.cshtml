@model IEnumerable<Agri_Energy_Connect.Models.Product>
@{
    ViewData["Title"] = "Your Products";
}

<div class="container py-5">
    <div class="row justify-content-center mb-5 pb-3">
        <div class="col-md-8">
            <div class="card shadow-sm text-center p-4">
                <div class="card-body">
                    <h1 class="display-4">My Products</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-4 text-end">
                <a class="btn btn-primary" href="/Farmer/AddProduct">Add New Product</a>
            </div>
            @if (!Model.Any())
            {
                <p>No products found.</p>
            }
            else
            {
                <table class="table table-bordered table-striped">
                    <thead class="thead-light">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Production Date</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Category</td>
                                <td>@product.Description</td>
                                <td>@product.ProductionDate.ToLongDateString()</td>
                                <td>R @product.Price.ToString("N2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>