@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card shadow bg-light text-center p-4">
                <div class="card-body">
                    <h1 class="display-5">Welcome to your farmer dashboard</h1>
                    <p class="lead mb-0">View products marketplace and manage your own products</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center gx-5">
        <div class="col-md-5 mb-4">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Marketplace</h3>
                    <p class="mb-4">Find available products to purchase</p>
                    <div class="d-grid">
                        <a href="/Farmer/Marketplace" class="btn btn-primary">View marketplace</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Your Products</h3>
                    <p class="mb-4">Create your own product listings</p>
                    <div class="d-grid">
                        <a href="/Farmer/Products" class="btn btn-primary">Manage products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>