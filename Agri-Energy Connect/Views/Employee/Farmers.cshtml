@model IEnumerable<Agri_Energy_Connect.Models.Farmer>
@{
    ViewData["Title"] = "Farmers";
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card shadow bg-light text-center p-4">
                <div class="card-body">
                    <h1 class="display-4">Farmer Profiles</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="mb-4 text-end">
                <a class="btn btn-primary" href="/Employee/AddFarmer">Add New Farmer</a>
            </div>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Farmer ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center">No farmers found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var farmer in Model)
                        {
                            <tr>
                                <td>@farmer.FarmerId</td>
                                <td>@farmer.FirstName @farmer.LastName</td>
                                <td>@farmer.Email</td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/Employee/FarmerDetails/@farmer.FarmerId">View Profile</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

