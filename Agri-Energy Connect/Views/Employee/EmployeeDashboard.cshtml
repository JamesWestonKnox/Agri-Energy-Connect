@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container py-5">

    <div class="row justify-content-center mb-5">
        <div class="col-md-10">
            <div class="card bg-light shadow text-center p-4">
                <div class="card-body">
                    <h1 class="display-5">Welcome to your Employee Dashboard</h1>
                    <p class="lead mb-0">Manage farmers and products in one simple dashboard</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center gx-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Products Management</h3>
                    <p class="mb-4">View and manage all products</p>
                    <div class="d-grid">
                        <a href="/Employee/Products" class="btn btn-primary">Manage Products</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Farmers Management</h3>
                    <p class="mb-4">Create and view farmer profiles</p>
                    <div class="d-grid">
                        <a href="/Employee/Farmers" class="btn btn-primary">Manage Farmers</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
